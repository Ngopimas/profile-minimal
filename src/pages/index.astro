---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Card from "@components/Card";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SITE, SOCIALS } from "@config";
import ProjectCard from "@components/ProjectCard";
import Image from "astro/components/Image.astro";
import image from "@assets/images/romain.jpeg";

const posts = await getCollection("blog");
const projects = await getCollection("projects");

const sortedPosts = getSortedPosts(posts);
const sortedProjects = getSortedPosts(projects);
const featuredProjects = sortedProjects.filter(({ data }) => data.featured);

const socialCount = SOCIALS.filter(social => social.active).length;


---

<Layout>
  <Header />
  <main id="main-content" class="">
    <section id="hero" class="mx-auto max-w-3xl">
      <h1 class="heading text-4xl md:text-5xl">Hi there! I'm Romain ðŸ‘‹</h1>
      <div class="hero-container">
        <div class="hero-content">
          <p>
            Software engineer @<LinkButton
              href="https://deeplime.io/"
              className="text-skin-accent hover:opacity-80 underline underline-offset-4"
            >DeepLime</LinkButton>, with a passion for creating nice and functional web applications. 
            I love working with modern technologies and am always eager to learn new things.
          </p>
          <p>
            <a
              target="_blank"
              href="/rss.xml"
              class="text-skin-accent hover:opacity-80 underline underline-offset-4"
              aria-label="rss feed"
              title="RSS Feed"
            >
              Follow along
            </a>
            as I continue to explore web development, AI, cloud architecture, and interactive data visualizations.
          </p>
          {
            socialCount > 0 && (
              <div class="flex items-center gap-2">
                <span class="text-sm text-skin-base/70">Contact me:</span>
                <Socials />
              </div>
            )
          }
        </div>

      <div class="hero-image">
        <div class="image-container">
          <Image src={image} alt="Romain" class="profile-image" />
          <div class="image-bg-decoration"></div>
        </div>
      </div>


    </div>

    </section>


    {
      featuredProjects.length > 0 && (
        <section class="mx-auto max-w-3xl py-12">
          <div class="mb-8 flex items-center justify-between">
            <h2 class="heading">Work</h2>
            <LinkButton 
              href="/projects/"
              className="text-sm text-skin-accent hover:opacity-80"
            >
              View all projects â†’
            </LinkButton>
          </div>
          <div class="grid gap-6">
            {featuredProjects.map(
              ({ data, slug }, index) =>
                index < SITE.postPerIndex && (
                  <ProjectCard
                    href={`/projects/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </div>
        </section>
      )
    }

    {
      sortedPosts.length > 0 && (
        <section class="mx-auto max-w-3xl py-12">
          <div class="mb-8 flex items-center justify-between">
            <h2 class="heading">Writing</h2>
            <LinkButton 
              href="/posts/"
              className="text-sm text-skin-accent hover:opacity-80"
            >
              View all posts â†’
            </LinkButton>
          </div>
          <div class="grid gap-6">
            {sortedPosts.map(
              ({ data, slug }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </div>
        </section>
      )
    }
  </main>

  <Footer />
</Layout>

<style>
  main {
    @apply relative;
  }

  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }

  .hero-container {
    @apply flex flex-col md:flex-row-reverse justify-between items-center gap-8;
    position: relative;
    z-index: 2;
  }
  

  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }

  .hero-content {
    @apply flex-1 ;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  .hero-image {
    @apply flex-shrink-0;
  }
  
  .image-container {
    position: relative;
    width: 280px;
    height: 280px;
  }
  
  .profile-image {
    @apply rounded-2xl object-cover;
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 2;
    border: 3px solid var(--color-bg);
    box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 8px 10px -6px rgba(0,0,0,0.1);
  }
  
  .image-bg-decoration {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 15px;
    left: 15px;
    background-color: var(--color-accent);
    border-radius: 1rem;
    z-index: 1;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
</style>
